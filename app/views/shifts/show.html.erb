<div class= 'container m-3 text-center'>
  <h1>SHIFT VIEW</h1>
  <div class="d-flex justify-content-evenly">
    <div>
      <br>
      <%= @shift.start_time %>
      <br>
      <%= @shift.end_time %>
      <br>
    </div>
    <div>
      <% @shift.assignments.each do |assignment| %>
        <%= assignment.role %>
      <% end %>
      <br>
      <hr>
      <ul>
      <% @shift.users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <%= link_to 'Back to Month View', days_path, class: 'btn btn-primary text-light'  %>
</div>


