<div class="card-conflict text-center">
  <div class="card-header">
    <i class="fa-solid fa-triangle-exclamation"></i>
  </div>
  <div class="card-body">
    <h5 class="card-title">Conflict Alert</h5>
    <p>From: <%= @shift.start_time.hour %>:00 - To: <%= @shift.end_time.hour %>:00</p>
    <div class="card-text">
      <% @shift.users.each do |user| %>
        <%= user.name %><br>
      <% end %>
    </div>
    <%= link_to 'Change', shift_path(@shift), class: "btn btn-warning m-2 text-light"%>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
<div class="mt-3">
  <%= link_to 'Back to Month View', days_path, class: 'text-primary text-decoration-none'  %>
</div>
