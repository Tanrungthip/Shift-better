<% num = 0 %>
<% day_shifts = [] %>
<div class="cards">
  <% 3.times do %>
    <div class="card-category placeholder-grey"></div>
  <% end %>
  <% days.each do |day| %>
    <div class="card-category">
      <p class="date-corner"><%= link_to day.date.day, day_path(day), class: 'text-dark text-decoration-none'%></p>
      <% 3.times do %>
        <% day_shifts << shifts[num] %>
        <% num += 1 %>
      <% end %>
      <% day_shifts.each do |shift| %>
        <% if shift.day == day %>
          <p class="text-dark shift-empty"><%= "#{shift.start_time.hour}:00 - #{shift.end_time.hour}:00" %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="card-category placeholder-grey"></div>
</div>
