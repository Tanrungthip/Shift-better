<div class="container mt-2">
  <div class="container m-1">
  <div class="card-preference">

  <% total_hours = 0 %>
  <% @shifts.each do |shift| %>
    <% if Assignment.where(shift: shift, user: @current_user).count > 0 %>
      <% duration = shift.end_time - shift.start_time %>
      <% total_hours += duration / 1.hour %>
    <% end %>
  <% end %>
  <p><strong>Work Activity</strong></p>
    <p>Total Hours <i class="fa-regular fa-clock"></i>
    <strong><%= total_hours %></strong>
    </p>

  </div>
  </div>
  <div class="card-preference">
    <h5><strong class="p-2">Day Off</strong></h5>
    <div class="progress" role="progressbar" aria-label="Animated striped example" aria-valuenow="<%= current_user.preferences.where(category:"day_off").count / 3.to_f * 100 %>" aria-valuemin="0" aria-valuemax="100">
      <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" style="width: <%= (current_user.preferences.where(category:"day_off").count / 3.to_f * 100).round %>%"></div>
    </div>
    <p class="text-warning"><%= current_user.preferences.where(category:"day_off").count %>/3 limited</p>
    <div class="text-left">
      <% current_user.preferences.where(category: "day_off").each do |preference| %>
        <p><%= link_to preference_path(preference), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{preference.category}?" }, class: 'text-gray text-decoration-none' do %>
            <i class="fa-regular fa-calendar-minus fa-2xs"></i> <%= preference.day.date.strftime("%a, %-d %B") %>
          <% end %></p>
      <% end %>
    </div>
  </div>
  <div class="card-preference">
    <h5><strong class="p-2">Paid Day Off</strong></h5>
    <% current_user.preferences.where(category: "paid_dayoff").each do |preference| %>
      <% if current_user.preferences.empty? == false %>
        <p><%= link_to preference_path(preference), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{preference.category}?" }, class: 'text-gray text-decoration-none' do %>
            <i class="fa-regular fa-calendar-minus fa-2xs"></i> <%= preference.day.date.strftime("%a, %-d %B") %>
          <% end %></p>
      <% else %>
        <p>You don't have any Paid Day Off</p>
      <% end %>
    <% end %>
  </div>
  <div class="card-preference">
    <h5><strong class="p-2">Time Off</strong></h5>
    <% current_user.preferences.where(category: "time_off").each do |preference| %>
      <% if current_user.preferences.empty? == false %>
        <p><%= link_to preference_path(preference), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{preference.category}?" }, class: 'text-gray text-decoration-none' do %>
            <i class="fa-regular fa-calendar-minus fa-2xs"></i> <%= preference.day.date.strftime("%a, %-d %B")  %>
            <br>
            <% ids = preference.unavailable_shift_ids %>
            <% ids.each do |id| %>
              From: <%= Shift.find(id).start_time.hour%>:00 -
              To: <%= Shift.find(id).end_time.hour%>:00
            <% end %></p>
        <% end %>
      <% else %>
        <p>You don't have any Time Off</p>
      <% end %>
    <% end %>
  </div>
</div>
